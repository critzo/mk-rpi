FROM golang:1.11 as build
COPY pusher/* /go/src/github.com/m-lab/pusher
RUN go get -v github.com/m-lab/pusher

FROM resin/%%RESIN_MACHINE_NAME%%-debian:stretch
ENV INITSYSTEM on
COPY --from=build /go/bin/pusher /

RUN apt-get update && apt-get install -qy \
  autoconf \
  automake \
  build-essential \
  dh-autoreconf \
  dateutils \
  g++-6 \
  gcc \
  gcc-6 \
  git \
  libc++-dev \
  libevent-dev \
  libgeoip-dev \
  libtool \
  libssl-dev \
  make \
  paris-traceroute \
  python \
  python-crypto \
  python-dev \
  python-prometheus-client \
  python-setuptools \
  python-tz \
  python-tzlocal \
  python-regex \
  python-urllib3 \
  speedtest-cli \
  wget

RUN git clone --recursive https://github.com/critzo/mk-rpi.git
WORKDIR /mk-rpi
RUN cp WIP/*.dat measurement-kit/
WORKDIR /mk-rpi/measurement-kit
RUN ./autogen.sh && ./configure && make && make install && ldconfig
RUN mv /mk-rpi/measurement-kit/GeoIP* /mk-rpi/test-runner/

WORKDIR /mk-rpi/test-runner
CMD ["python", "run.py"]